{% extends 'project_related/project_related_base.html.twig' %}

{% trans_default_domain 'mosparo' %}

{% block documentTitle %}{{ 'View ruleset %rulesetName%'|trans({ '%rulesetName%': ruleset.name }) }} - {{ parent() }}{% endblock %}
{% block pagePreTitle %}{{ parent() }} {{ 'Rulesets'|trans }} <i class="ti ti-chevron-right"></i>{% endblock %}
{% block pageTitle %}{{ 'View ruleset %rulesetName%'|trans({ '%rulesetName%': ruleset.name }) }} {% endblock %}

{% block pageBody %}
    <div class="container-xl">
        <div class="row mb-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">{{ 'Ruleset details'|trans }}</h3>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-12 col-lg-4">
                                <h4 class="mb-0">{{ 'URL'|trans }}</h4>
                                <div>
                                    <code>{{ ruleset.url }}</code>
                                </div>
                            </div>
                            <div class="col-12 col-lg-4">
                                <h4 class="mb-0">{{ 'Status'|trans }}</h4>
                                <div>
                                    {% if ruleset.status %}
                                        <span class="text-success"><strong>{{ 'Active'|trans }}</strong></span>
                                    {% else %}
                                        <span class="text-danger"><strong>{{ 'Inactive'|trans }}</strong></span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-12 col-lg-4">
                                <h4 class="mb-0">{{ 'Spam rating factor'|trans }}</h4>
                                <div>
                                    {% if ruleset.spamRatingFactor %}
                                        {{ ruleset.spamRatingFactor }}
                                    {% else %}
                                        <em>1</em>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-lg-4">
                                <h4 class="mb-0">{{ 'Last refreshed at'|trans }}</h4>
                                <div>
                                    {% if ruleset.rulesetCache.refreshedAt %}
                                        {{ ruleset.rulesetCache.refreshedAt|format_datetime }}
                                    {% else %}
                                        <em>Empty</em>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-12 col-lg-4">
                                <h4 class="mb-0">{{ 'Last updated at'|trans }}</h4>
                                <div>
                                    {% if ruleset.rulesetCache.updatedAt %}
                                        {{ ruleset.rulesetCache.updatedAt|format_datetime }}
                                    {% else %}
                                        <em>Empty</em>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-12 col-lg-4">
                                <h4 class="mb-0">{{ 'Number of included rules'|trans }}</h4>
                                <div>
                                    {{ ruleset.rulesetCache.rules|length }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% if hasError %}
            <div class="alert alert-danger">
                {{ errorMessage|trans }}
            </div>
        {% endif %}

        <h2 class="mt-1">{{ 'Included rules'|trans }}</h2>

        {% for rule in ruleset.rulesetCache.rules %}
            <div class="row" id="{{ rule.uuid }}">
                <div class="col-12 col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">{{ 'Rule details'|trans }}</h3>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h4 class="mb-0">{{ 'Name'|trans }}</h4>
                                <div>
                                    {{ rule.name }}
                                </div>
                            </div>
                            <div class="mb-3">
                                <h4 class="mb-0">{{ 'Description'|trans }}</h4>
                                <div>
                                    {% if rule.description %}
                                        {{ rule.description }}
                                    {% else %}
                                        <em>{{ 'Empty'|trans }}</em>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="">
                                <h4 class="mb-0">{{ 'Spam rating factor'|trans }}</h4>
                                <div>
                                    {% if rule.spamRatingFactor %}
                                        {{ rule.spamRatingFactor }}
                                    {% else %}
                                        <em>1</em>
                                    {% endif %}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">{{ 'Items'|trans }}</h3>

                            {% set ruleType = rule_type(rule.type) %}
                            <div class="col-auto ms-auto rule-type-information">
                                <div class="h3 mb-0">
                                    <div class="rule-type-label">
                                        <i class="{{ ruleType.icon }}"></i>
                                        {{ ruleType.name|trans }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <table class="table card-table table-striped">
                            <thead>
                                <tr>
                                    <th width="20%">{{ 'Type'|trans }}</th>
                                    <th>{{ 'Value'|trans }}</th>
                                    <th width="5%">{{ 'Rating'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in rule.items %}
                                    <tr>
                                        <td>{{ rule_subtype(ruleType, item.type)|trans }}</td>
                                        <td><code>{{ item.value }}</code></td>
                                        <td>
                                            {% if item.rating %}
                                                {{ item.rating }}
                                            {% else %}
                                                <em>1</em>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="d-flex mt-3">
                <div class="col">
                    <a href="{{ path('ruleset_list') }}" class="btn btn-outline-secondary" tabindex="1000">
                        <i class="ti ti-chevron-left"></i>
                        {{ 'Back to rulesets'|trans }}
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
