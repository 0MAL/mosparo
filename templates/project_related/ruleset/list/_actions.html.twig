{% trans_default_domain 'mosparo' %}

<div class="d-flex">
    <a href="{{ path('ruleset_view', { 'id': row.id }) }}" class="btn btn-info me-2">
        <i class="ti ti-info-circle"></i>
        {{ 'action.view'|trans }}
    </a>
    {% if canManage %}
        <a href="{{ path('ruleset_edit', { 'id': row.id }) }}" class="btn btn-primary me-2">
            <i class="ti ti-pencil"></i>
            {{ 'action.edit'|trans }}
        </a>
        <a href="{{ path('ruleset_delete', { 'id': row.id }) }}" class="btn btn-danger">
            <i class="ti ti-circle-minus"></i>
            {{ 'action.delete'|trans }}
        </a>
    {% endif %}
</div>