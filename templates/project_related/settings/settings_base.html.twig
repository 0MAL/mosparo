{% extends 'project_related/project_related_base.html.twig' %}

{% trans_default_domain 'mosparo' %}

{% block documentTitle %}{{ 'Settings'|trans }} - {{ parent() }}{% endblock %}
{% block pagePreTitle %}{{ parent() }} {{ 'Settings'|trans }}  <i class="ti ti-chevron-right"></i>{% endblock %}

{% block pageFlashes %}
{% endblock %}

{% block pageBody %}
<div class="container-xl">
    <div class="row gx-lg-4">
        <div class="d-none d-lg-block col-lg-3">
            <ul class="nav nav-pills nav-vertical">
                <li class="nav-item">
                    <a href="{{ path('settings_general') }}" class="nav-link {% if app.request.attributes.get('_route') == 'settings_general' %}active{% endif %}">
                        <i class="ti ti-tool"></i>
                        {{ 'General'|trans }}
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('settings_member_list') }}" class="nav-link {% if app.request.attributes.get('_route') == 'settings_member_list' %}active{% endif %}">
                        <i class="ti ti-users"></i>
                        {{ 'Project members'|trans }}
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('settings_security') }}" class="nav-link {% if app.request.attributes.get('_route') == 'settings_security' %}active{% endif %}">
                        <i class="ti ti-shield-x"></i>
                        {{ 'Security'|trans }}
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('settings_design') }}" class="nav-link {% if app.request.attributes.get('_route') == 'settings_design' %}active{% endif %}">
                        <i class="ti ti-color-swatch"></i>
                        {{ 'Design'|trans }}
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-12 col-lg-9">
            {% set flashes = app.flashes %}
            {% if flashes|length > 0 %}
                {% for label, messages in flashes %}
                    {%- if label == 'notice' -%}
                        {% set class = 'info' %}
                    {%- elseif label == 'success' -%}
                        {% set class = 'success' %}
                    {%- elseif label == 'warning' -%}
                        {% set class = 'warning' %}
                    {%- elseif label == 'error' -%}
                        {% set class = 'danger' %}
                    {%- endif -%}
                    {% for message in messages %}
                        <div class="alert alert-{{ class }}">
                            {{ message|trans }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endif %}
            {% block settingsPageBody %}{% endblock %}
        </div>
    </div>
</div>
{% endblock %}