{% extends 'project_related/settings/settings_base.html.twig' %}

{% trans_default_domain 'mosparo' %}

{% block documentTitle %}{{ 'Project members'|trans }} - {{ parent() }}{% endblock %}
{% block pageTitle %}{{ 'Project members'|trans }}{% endblock %}

{% block pageTitleColumn %}
    {{ parent() }}

    <div class="col-auto ms-auto">
        <div class="btn-list">
            <a href="{{ path('settings_member_add') }}" class="btn btn-success">
                <i class="ti ti-plus"></i>
                {{ 'Add project member'|trans }}
            </a>
        </div>
    </div>
{% endblock %}

{% block settingsPageBody %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div id="project-members">

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <!-- Insert this at the end of your body element, but before the closing tag -->
    <script src="{{ asset('bundles/datatables/js/datatables.js') }}"></script>
    <script>
        $(function() {
            $('#project-members').initDataTables({{ datatable_settings(datatable) }}, {
                autoWidth: false,
                searching: false,
                info: false,
                columnDefs: [
                { width: "60%", targets: 0 },
                { width: "40%", targets: 1 },
                { width: "1%", targets: 2 }
            ]
            });
        });
    </script>
{% endblock %}
