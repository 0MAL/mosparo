{% extends 'project_related/settings/settings_base.html.twig' %}

{% trans_default_domain 'mosparo' %}

{% if isNew %}
    {% set pageTitle = 'Add project member'|trans %}
{% else %}
    {% set pageTitle = 'Modify project member %projectMemberName%'|trans({ '%projectMemberName%': projectMember.user.email }) %}
{% endif %}

{% block pageBody %}
    <div class="container-tight pb-4">
        <div class="row">
            <div class="col text-center">
                <img src="{{ asset('build/images/icons/users.svg') }}" class="w-50 mb-5" />
            </div>
        </div>

        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                <div class="card card-md">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">
                            {{ pageTitle }}
                        </h2>

                        {{ form_row(form.email) }}
                        {{ form_row(form.role) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <a href="{{ path('settings_member_list') }}" class="btn btn-outline-secondary" tabindex="1000">
                    <i class="ti ti-chevron-left"></i>
                    {{ 'Back to project members'|trans }}
                </a>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">
                    <i class="ti ti-device-floppy"></i>
                    {{ 'Save'|trans }}
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}