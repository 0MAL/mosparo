{% macro contrastRatioBox(name) %}
    <div class="accordion cr-accordion" id="contrast-ratio-box-{{ name }}">
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-crb-{{ name }}" aria-expanded="true">
                    <span class="cra-title">
                        {{ 'settings.design.cr.title'|trans }}
                    </span>
                    <span class="cra-value contrast-ratio-aa">
                        <i class="ti ti-x"></i>
                        AA
                    </span>
                    <span class="cra-value contrast-ratio-aaa">
                        <i class="ti ti-x"></i>
                        AAA
                    </span>
                </button>
            </h2>
            <div id="collapse-crb-{{ name }}" class="accordion-collapse collapse" data-bs-parent="#contrast-ratio-box-{{ name }}" style="">
                <div class="accordion-body pt-0">
                    <table class="table table-bordered table-sm table-vcenter mb-3">
                        <thead>
                            <tr>
                                <td class="col-3"></td>
                                <th class="col-3">{{ 'settings.design.cr.value'|trans }}</th>
                                <th class="col-3">AA</th>
                                <th class="col-3">AAA</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="cr-text">
                                <th>
                                    {{ 'settings.design.cr.text'|trans }}
                                </th>
                                <td class="cra-table-value">
                                    <div class="contrast-ratio-value">
                                        0
                                    </div>
                                </td>
                                <td class="cra-table-value contrast-ratio-aa">
                                    <i class="ti ti-x"></i>
                                    <span class="cr-min-value"></span>
                                </td>
                                <td class="cra-table-value contrast-ratio-aaa">
                                    <i class="ti ti-x"></i>
                                    <span class="cr-min-value"></span>
                                </td>
                            </tr>
                            {% if name == 'failure' %}
                                <tr class="cr-text-error">
                                    <th>
                                        {{ 'settings.design.cr.textError'|trans }}
                                    </th>
                                    <td class="cra-table-value">
                                        <div class="contrast-ratio-value">
                                            0
                                        </div>
                                    </td>
                                    <td class="cra-table-value contrast-ratio-aa">
                                        <i class="ti ti-x"></i>
                                        <span class="cr-min-value"></span>
                                    </td>
                                    <td class="cra-table-value contrast-ratio-aaa">
                                        <i class="ti ti-x"></i>
                                        <span class="cr-min-value"></span>
                                    </td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                    <p class="mb-0">
                        {{ 'settings.design.cr.description'|trans }}
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}

