{% extends 'project_related/project_related_base.html.twig' %}

{% trans_default_domain 'mosparo' %}

{% block documentTitle %}{{ 'rule.title'|trans }} - {{ parent() }}{% endblock %}
{% block pageTitle %}{{ 'rule.title'|trans }}{% endblock %}

{% block pageTitleColumn %}
    {{ parent() }}

    {% if canManage %}
        <div class="col-auto ms-auto">
            <div class="btn-list">
                <div class="dropdown">
                    <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" title="{{ 'submission.filter.dropdown'|trans }}">
                        <i class="ti ti-filter"></i>
                    </button>
                    <div class="dropdown-menu">
                        <a href="{{ path('rule_list') }}" class="dropdown-item {% if filter == '' %}active{% endif %}">
                            <i class="ti ti-check {% if filter != '' %}invisible{% endif %}"></i>
                            {{ 'rule.filter.options.all'|trans }}
                        </a>
                        <div class="dropdown-divider"></div>
                        {% for ruleType in ruleTypes %}
                            <a href="{{ path('rule_list_filtered', { 'filter': ruleType.key }) }}" class="dropdown-item {% if filter == ruleType.key %}active{% endif %} {% if not numberOfRulesByType[ruleType.key] is defined %}disabled{% endif %}">
                                <i class="ti {% if filter == ruleType.key %}ti-check{% else %}{{ ruleType.icon }}{% endif %}"></i>
                                {{ ruleType.name|trans }}

                                {% if numberOfRulesByType[ruleType.key] is defined %}
                                    ({{ numberOfRulesByType[ruleType.key] }})
                                {% endif %}
                            </a>
                        {% endfor %}
                    </div>
                </div>

                <a href="{{ path('rule_create_choose_type') }}" class="btn btn-success add-button">
                    <i class="ti ti-plus"></i>
                    <span>{{ 'rule.create.title'|trans }}</span>
                </a>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block pageBody %}
    <div class="container-xl">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div id="rules">

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <!-- Insert this at the end of your body element, but before the closing tag -->
    <script src="{{ asset('bundles/datatables/js/datatables.js') }}"></script>
    {% cspscript %}
        <script>
            $(function() {
                $('#rules').initDataTables({{ datatable_settings(datatable) }}, {
                    autoWidth: false,
                    searching: false,
                    info: false,
                    responsive: true,
                    columnDefs: [
                        { width: "40%", targets: 0 },
                        { width: "1%", targets: 3 }
                    ]
                });
            });
        </script>
    {% endcspscript %}
{% endblock %}
