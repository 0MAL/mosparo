{% trans_default_domain 'mosparo' %}

<div class="d-flex">
    <a href="{{ path('rule_edit', { 'id': row.id}) }}" class="btn btn-primary me-2">
        <i class="ti ti-pencil"></i>
        {{ 'Edit'|trans }}
    </a>
    {% if canManage %}
        <a href="{{ path('rule_delete', { 'id': row.id}) }}" class="btn btn-danger">
            <i class="ti ti-circle-minus"></i>
            {{ 'Delete'|trans }}
        </a>
    {% endif %}
</div>