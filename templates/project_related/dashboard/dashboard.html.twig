{% extends 'project_related/project_related_base.html.twig' %}

{% trans_default_domain 'mosparo' %}

{% block documentTitle %}{{ 'Dashboard'|trans }} - {{ parent() }}{% endblock %}
{% block pageTitle %}{{ 'Dashboard'|trans }}{% endblock %}

{% block pageBody %}
    <div class="container-xl">
        <div class="row">
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body p-2 text-center">
                        <div class="h1 mt-3">{{ numberOfSubmissions }}</div>
                        <div class="text-muted mb-3">{{ 'Submissions'|trans }}</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body p-2 text-center">
                        <div class="h1 mt-3 text-danger">{{ numberOfSpamSubmissions }}</div>
                        <div class="text-muted mb-3">{{ 'Spam submissions'|trans }}</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body p-2 text-center">
                        <div class="h1 mt-3">{{ numberOfRules }}</div>
                        <div class="text-muted mb-3">{{ 'Rules'|trans }}</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body p-2 text-center">
                        <div class="h1 mt-3">{{ numberOfRulesets }}</div>
                        <div class="text-muted mb-3">{{ 'Rulesets'|trans }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}