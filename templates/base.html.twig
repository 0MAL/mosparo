<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">

        <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">

        <title>{% block documentTitle %}Mosparo{% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('mosparo') }}
        {% endblock %}
    </head>
    <body class="{% block bodyClasses %}antialised{% endblock %}">
        {% block body %}
            <div class="wrapper">
                <header class="navbar navbar-expand-md navbar-light d-print-none">
                    <div class="container-xl">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <h1 class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
                            <a href="/">
                                <img src="{{ asset('build/images/mosparo-logo.svg') }}" width="110" alt="Mosparo" class="navbar-brand-image" />
                            </a>
                        </h1>
                        <div class="navbar-nav header-navbar flex-row order-md-last">
                            <div class="nav-item dropdown mx-3">
                                <a href="#" class="btn btn-dark" data-bs-toggle="dropdown" aria-label="Open user menu">
                                    <i class="ti ti-folder"></i>
                                    {% if activeProject %}
                                        {{ activeProject.name }}
                                    {% else %}
                                        Please choose...
                                    {% endif %}
                                </a>
                                <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    {% if projects %}
                                        {% for project in projects %}
                                            <a href="{{ path('project_switch', { 'project': project.id }) }}" class="dropdown-item">
                                                <i class="ti ti-folder"></i>
                                                {{ project.name }}
                                            </a>
                                        {% endfor %}
                                        <div class="dropdown-divider"></div>
                                    {% endif %}
                                    <a href="{{ path('project_list') }}" class="dropdown-item">
                                        <i class="ti ti-folders"></i>
                                        Manage projects
                                    </a>
                                    <a href="{{ path('project_create') }}" class="dropdown-item">
                                        <i class="ti ti-plus"></i>
                                        Create project
                                    </a>
                                </div>
                            </div>

                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link avatar-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown" aria-label="Open user menu">
                                    <span class="avatar avatar-sm text-center">
                                        <i class="ti ti-user"></i>
                                    </span>
                                    <div class="d-none d-xl-block ps-2">
                                        <div>{{ app.user.username }}</div>
                                    </div>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <a href="{{ path('account_overview') }}" class="dropdown-item">
                                        <i class="ti ti-adjustments"></i>
                                        Account
                                    </a>
                                    <a href="{{ path('security_logout') }}" class="dropdown-item">
                                        <i class="ti ti-logout"></i>
                                        Logout
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </header>

                <div class="navbar-expand-md">
                    <div class="collapse navbar-collapse" id="navbar-menu">
                        <div class="navbar navbar-light">
                            <div class="container-xl">
                                <ul class="navbar-nav">
                                    {% if activeProject %}
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('dashboard') }}">
                                                <i class="ti ti-dashboard"></i>
                                                <span class="nav-link-title">
                                                    Dashboard
                                                </span>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('rule_list') }}">
                                                <i class="ti ti-filter"></i>
                                                <span class="nav-link-title">
                                                    Rules
                                                </span>
                                            </a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link" href="/">
                                                <i class="ti ti-stack"></i>
                                                <span class="nav-link-title">
                                                    Rulesets
                                                </span>
                                            </a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('submission_list') }}">
                                                <i class="ti ti-mail"></i>
                                                <span class="nav-link-title">
                                                    Submissions
                                                </span>
                                            </a>
                                        </li>

                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="/" data-bs-toggle="dropdown">
                                                <i class="ti ti-settings"></i>
                                                <span class="nav-link-title">
                                                    Settings
                                                </span>
                                            </a>
                                            <div class="dropdown-menu" data-bs-popper="none">
                                                <a class="dropdown-item" href="{{ path('settings_general') }}">
                                                    <i class="ti ti-tool"></i>
                                                    General
                                                </a>
                                                <a class="dropdown-item" href="{{ path('settings_design') }}">
                                                    <i class="ti ti-color-swatch"></i>
                                                    Design
                                                </a>
                                                <a class="dropdown-item" href="{{ path('settings_users') }}">
                                                    <i class="ti ti-users"></i>
                                                    Users
                                                </a>
                                            </div>
                                        </li>
                                    {% endif %}
                                </ul>

                                {% if is_granted('ROLE_SUPER_ADMIN') %}
                                    <div class="my-2 my-md-0 flex-grow-1 flex-md-grow-0 order-first order-md-last">
                                        <ul class="navbar-nav">
                                            <li class="nav-item">
                                                <a class="nav-link" href="/">
                                                    <i class="ti ti-adjustments-horizontal"></i>
                                                    <span class="nav-link-title">
                                                        Administration
                                                    </span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="page-wrapper">
                    {% block pageContainer %}
                        {% block pageHeader %}
                            <div class="container-xl">
                                <div class="page-header d-print-none">
                                    <div class="row align-items-center">
                                        {% block pageTitleColumn %}
                                            <div class="col">
                                                <div class="page-pretitle">
                                                    {% block pagePreTitle %}{% endblock %}
                                                </div>
                                                <h1 class="page-title">
                                                    {% block pageTitle %}{% endblock %}
                                                </h1>
                                            </div>
                                        {% endblock %}
                                    </div>
                                </div>
                            </div>
                        {% endblock %}

                        <div class="page-body">
                            {% set flashes = app.flashes %}
                            {% if flashes|length > 0 %}
                                <div class="container-xl">
                                    {% for label, messages in flashes %}
                                        {%- if label == 'notice' -%}
                                            {% set class = 'info' %}
                                        {%- elseif label == 'success' -%}
                                            {% set class = 'success' %}
                                        {%- elseif label == 'warning' -%}
                                            {% set class = 'warning' %}
                                        {%- elseif label == 'error' -%}
                                            {% set class = 'danger' %}
                                        {%- endif -%}
                                        {% for message in messages %}
                                            <div class="alert alert-{{ class }}">
                                                {{ message }}
                                            </div>
                                        {% endfor %}
                                    {% endfor %}
                                </div>
                            {% endif %}

                            {% block pageBody %}{% endblock %}
                        </div>
                    {% endblock %}
                </div>
            </div>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('mosparo') }}
        {% endblock %}
    </body>
</html>